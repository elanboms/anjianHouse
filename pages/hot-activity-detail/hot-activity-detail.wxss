/* pages/hot-activity-detail/hot-activity-detail.wxss */

.activity-root {
  margin-bottom: 125rpx;
}

.activity-img {
  width: 750rpx;
}

.activity-tit {
  margin-top: 50rpx;
}
.activity-righ{
  width: 350rpx;
}
.activity-section {
  margin-top: 30rpx;
}

.activity-section-left {
  width: 150rpx;
  white-space: nowrap;
}

.activity-section-right {
  width: 500rpx;
}

.activity-section-img {
  width: 30rpx;
  height: 30rpx;
  margin-top: 8rpx;
}

.activity-tit-h2 {
  margin-top: 60rpx;
  margin-bottom: 35rpx;
}

.activity-card {
  box-sizing: border-box;
  height: 54rpx;
  margin-bottom: 25rpx;
  margin-right: 30rpx;
  padding: 0 20rpx;
  line-height: 54rpx;
  text-align: center;
  background: rgba(75, 126, 233, 0.12);
  border-radius: 6rpx;
  color: #677ecc;
}

.activ-tit {
  line-height: 50rpx;
  height: 50rpx;
  white-space: nowrap;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #1a1a1a;
}

.activ-tit text {
  color: #f00;
  margin-right: 10rpx;
}

.activ-input {
  text-align: end;
  margin-right: 20rpx;
}

.activ-more-img {
  width: 13rpx;
  height: 22rpx;
  margin-top: 15rpx;
}

.hr-mag {
  margin: 40rpx 0;
}

.activity-btn {
  width: 690rpx;
  height: 88rpx;
  margin-bottom: 50rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(246, 51, 45, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.activ-tip {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(168, 168, 168, 1);
}

/* 底部按钮 */

.bottom-fixed {
  z-index: 3;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 10rpx 0;
  width: 750rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -3rpx 6rpx 0px rgba(138, 138, 137, 0.12);
  transform: translateY(100rpx);
  transition: 0.3s;
}

.bottom-fixed.active {
  transform: translateY(0);
  transition-delay: 0.3s;
}

.fixed-share-section {
  margin-left: 56rpx;
  width: 120rpx;
}

.fixed-share-img {
  width: 35rpx;
  height: 35rpx;
  margin-top: 5rpx;
  margin-left: 45rpx;
  margin-bottom: 13rpx;
}

.fixed-btn-section {
  width: 320rpx;
  height: 78rpx;
  margin-left: 50rpx;
  line-height: 78rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  background: rgba(246, 51, 45, 1);
  border-radius: 10rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
}

/* 选择楼盘弹窗 */

.dia-area {
  transition: 0.3s;
}

.dia-house-con {
  z-index: 1000;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  transform: translateY(750rpx);
  transition: 0.3s;
}

.dia-house-tit {
  margin: 50rpx 0 40rpx 0;
}

.dia-house-section {
  position: relative;
}

.dia-house-card {
  font-size: 24rpx;
  color: #1a1a1a;
  background: rgba(0, 0, 0, 0.06);
}

.activity-house-card-select {
  position: absolute;
  top: 0;
  right: 30rpx;
  width: 26rpx;
  height: 25rpx;
}

.dia-btn-type {
  width: 320rpx;
  height: 80rpx;
  margin-bottom: 45rpx;
  margin-top: 65rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
}

.dia-btn-type:first-child {
  border: 1rpx solid rgba(210, 210, 210, 1);
  color: rgba(51, 51, 51, 1);
}

.dia-btn-type:last-child {
  background: rgba(246, 51, 45, 1);
  color: #fff;
}

/* 海报分享弹窗 */

.dia-share-con {
  z-index: 1000;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  transform: translateY(9100rpx);
  transition: 0.3s;
}

.share-photo {
  /* width: 400rpx;
  height: 625rpx; */
}

.close-photo {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  top: 30rpx;
  right: 30rpx;
}

.share-friend {
  background: rgba(248, 146, 71, 1);
  color: rgba(255, 255, 255, 1) !important ;
}
