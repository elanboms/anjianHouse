/* pages/house-detail/house-detail-more/house-detail-more.wxss */
.fixed-top{
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  width:750rpx;
}
.scroll-area {
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  height: 80rpx;
  background: white;
}

.house-moreinfo-type {
  position: relative;
  box-sizing: border-box;
  margin-left: 35rpx;
  padding: 0 0rpx;
  font-size: 34rpx;
  text-align: center;
  color: #9ba1ab;
  height: 80rpx;
  line-height: 80rpx;
}

.active {
  color: #1a1a1a;
}

.active::after {
  position: absolute;
  left: 40%;
  text-align: center;
  bottom: 0;
  content: "";
  width: 36rpx;
  height: 7rpx;
  background: rgba(246, 51, 45, 1);
  border-radius: 4rpx;
}

.moreinfo-root{
  box-sizing: border-box;
  width: 750rpx;
  margin-top: 120rpx;
  margin-bottom: 150rpx;
  padding: 0 47rpx;
  font-size: 34rpx;
}
.house-moreinfo-title{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}
.moreinfo-section{
  /* line-height: 40rpx; */
  margin-bottom: 30rpx;
}
.moreinfo-left{
  color: #9198A7;
  white-space: nowrap;
  margin-right: 45rpx;
}
.moreinfo-right{
  color: #1A1A1A;
}
.more-img{
  position: absolute;
  right: -10rpx;
  top: 0;
  width: 20rpx;
  height: 20rpx;
  margin-top: 15rpx;
}

/* 底部按钮 */
.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 10rpx 0;
  width: 750rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -3rpx 6rpx 0px rgba(138, 138, 137, 0.12);
  transform: translateY(100rpx);
  transition: 0.3s;
}
.bottom-fixed.active0{
  transform: translateY(0);
  transition-delay: 0.2s;
}

.fixed-share-section {
  margin-left: 90rpx;
  margin-right: 70rpx;
}

.fixed-share-img {
  width: 35rpx;
  height: 35rpx;
  margin-top: 5rpx;
  margin-left: 7rpx;
  margin-bottom: 13rpx;
}

.fixed-btn-section {
  width: 240rpx;
  height: 78rpx;
  margin-right: 30rpx;
  line-height: 78rpx;
  background: rgba(248, 146, 71, 1);
  border-radius: 10rpx;
}

.bottom-fixed-logo {
  width: 28rpx;
  height: 28rpx;
  margin-top: 28rpx;
  margin-left: 40rpx;
  margin-right: 18rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
}
.fixed-btn-section view{
  color: rgba(255, 255, 255, 1);
}
.fixed-btn-section:last-child {
  background: #F6332D;
}


