/**index.wxss**/
@import "../template/activity-template.wxss";
@import "../template/house-template.wxss";

.top {
  height: 60rpx;
  line-height: 60rpx;
}

.city {
  margin-left: 13rpx;
  margin-right: 30rpx;
}
.addv-img{
  width: 100%;
  height: auto;
  margin: 30rpx 0;
}

.add-img {
  width: 23rpx;
  height: 27rpx;
  margin-top: 16rpx;
}

.top-right {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(191, 191, 191, 0.18);
  border-radius: 30rpx;
}

.top-right input {
  height: 60rpx;
  line-height: 60rpx;
}

.seach-img {
  width: 23rpx;
  height: 23rpx;
  margin: 18rpx 11rpx 0 25rpx;
}

.banner {
  margin-top: 25rpx;
  margin-bottom: 50rpx;
  border-radius: 15rpx;
}

.banner-con {
  border-radius: 15rpx;
}

.banner-img {
  width: 690rpx;
  height: 350rpx;
  border-radius: 15rpx;
}

.today-news-img {
  width: 128rpx;
  height: 28rpx;
  margin-top: 7rpx;
}

.today-news-tit {
  width: 64rpx;
  height: 34rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  line-height: 34rpx;
  text-align: center;
  background: rgba(246, 51, 45, 1);
  border-radius: 10rpx;
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 4rpx;
}

.today-news-text {
  width: 460rpx;
}

.top-card {
  margin: 35rpx 0;
}

.top-section {
  width: 325rpx;
  height: 120rpx;
  margin: 15rpx 0;
  position: relative;
}

.top-section image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.top-section text {
  position: absolute;
  top: 34rpx;
  left: 40rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.activity {
  position: relative;
}

.activity-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 128rpx;
}

.title {
  z-index: 2;
  margin-top: 45rpx;
  margin-bottom: 50rpx;
}

.title-more-img {
  width: 12rpx;
  height: 20rpx;
  margin-left: 15rpx;
}

.acti-area {
  position: relative;
  background: #fff;
}

