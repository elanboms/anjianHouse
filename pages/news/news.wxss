/* pages/news/news.wxss */

.talk-root {
  margin-bottom: 120rpx;
}

.talk-section {
  font-size: 32rpx;
}

.talk-section-top {
  margin-top: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.talk-img {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  margin-top: 5rpx;
  margin-right: 20rpx;
}

.talk-text {
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 20rpx 80rpx;
}

.talk-time {
  margin-bottom: 15rpx;
  color: gray;
  padding-left: 80rpx;
}

.talk-icon {
  width: 45rpx;
  height: 45rpx;
}

.share-icon {
  width: 30rpx;
  height: 30rpx;
}

.photo-list {
  margin-bottom: 30rpx;
  flex-wrap: wrap;
  padding: 0 80rpx;
}

.photo-list-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.news-area {
  width: 530rpx;
  margin: 30rpx 0;
  align-items: center;
}

.news-area-con {
  width: 400rpx;
}

.news-area-img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 15rpx;
}

.time-area{
  position: relative;
}
.talk-btn{
  position: absolute;
  right: 60rpx;
  top:-10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex: 1;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background: #3a3a3a;
  color: white;
  font-size: 26rpx;
  border-radius: 10rpx;

}
.talk-btn view{
  text-align: center;
}
.talk-btn view:first-child{
  margin-right: 30rpx;
}

.zan-box, .news-area {
  box-sizing: border-box;
  margin-left: 80rpx;
  background: #fbf9fa;
}

.zan-area, .talk-area, .news-area {
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx;
}

.zan-icon {
  width: 35rpx;
  height: 35rpx;
  margin-top: 7rpx;
  margin-right: 10rpx;
}

.zan-name {
  color: #32344d;
  word-break: break-all;

}

.talk-area {
  padding-bottom: 20rpx;
}

.talk-area-section {
  /* margin: 10rpx 0; */
  font-size: 30rpx;
}

.talk-area-name {
  color: #32344d;
  white-space: nowrap;
}

.talk-area-con {
  color: black;
  word-break: break-all;

}
