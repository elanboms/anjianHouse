/* pages/center/my-customer/my-customer-detail/my-customer-detail.wxss */

page {
  background: #f5f5f5;
  font-size: 30rpx;
}

.position-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 120rpx;
  background: #F6332D;
  z-index: 1;
}
.cust-detail-root{
  position: absolute;
  top: 30rpx;
  z-index: 2;
}

.cust-section {
  position: relative;
  width: 690rpx;
  margin: 25rpx 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.position-call {
  position: absolute;
  top: 46rpx;
  right: 30rpx;
  width: 48rpx;
  height: 48rpx;
}

.cust-img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 23rpx;
  border-radius: 50%;
}

.cust-name {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.cust-tag {
  height: 36rpx;
  margin-left: 20rpx;
  line-height: 36rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 20rpx;
  text-align: center;
  color: #f6332d;
  background: rgba(255, 239, 240, 1);
  border-radius: 16rpx;
}

.cust-phone {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.cust-section-tit{
  margin-bottom: 36rpx;
}
.cust-section-con{
  margin-top: 33rpx;
  font-size: 30rpx;
}
.cust-section-con view:last-child{
  width: 350rpx;
  text-align: end;
}
.cust-section-left{
  color: #8F8F8F;
}
