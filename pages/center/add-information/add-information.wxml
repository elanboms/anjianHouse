<!--pages/center/add-information/add-information.wxml-->  
<form bindsubmit="formSubmit" report-submit='true'>
  <view class="add-root">
  
    <view class="add-tit">完善资料</view>
    <view class="add-text">请您尽量您的完善，为了我们工作人员以及客户联 系方便，也更利于您以后工作方便。
    </view>

    <view class="input-tit">真实姓名</view>
    <input class="input-con" name='name' placeholder="请填写本人的真实姓名" ></input>
    <view class="hr-2"></view>

    <view class="input-tit">联系电话</view>
    <input class="input-con" type="number" name='tel' placeholder="请填写联系方式"></input>
    <view class="hr-2"></view>

    <view class="read gray font-30">
      <checkbox color="#F6332D" class="check" value="{{agree}}" checked="{{agree}}" catchtap='checkboxChange' />
      <view class="agree-con">我已阅读并同意 <view catchtap="openRegistBook">《安荐客注册》</view> </view>
    </view>

    <button class="add-btn" form-type="submit" bindtap="submit">确认提交</button>

  </view>
</form>




