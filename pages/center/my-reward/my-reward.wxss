/* pages/center/my-reward/my-reward.wxss */

page {
  background: #f5f5f5;
}

.position-top {
  position: relative;
  width: 750rpx;
  height: 300rpx;
}

.position-bg {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 300rpx;
}

.reward-top {
  z-index: 999;
  position: absolute;
}

.reward-sum-price {
  width: 750rpx;
  margin-top: 40rpx;
  margin-bottom: 15rpx;
  font-size: 56rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.reward-top-text {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.reward-top-bottom {
  z-index: 999;
  position: absolute;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
}

.reward-top-con {
  width: 50%;
  height: 100rpx;
  margin-top: 15rpx;
  text-align: center;
}

.reward-top-con .font-30 {
  font-weight: bold;
}

.hr-9 {
  z-index: 999;
  position: absolute;
  top: 232rpx;
  left: 375rpx;
  width: 1rpx;
  height: 34rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 类别 */

.reward-type {
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
  background: #fff;
}

.reward-area {
  position: relative;
  width: 50%;
  text-align: center;
}

.reward-active {
  position: absolute;
  bottom: 0;
  left: 39%;
  width: 83rpx;
  height: 4rpx;
  background: rgba(246, 51, 45, 1);
}

.reward-section {
  box-sizing: border-box;
  padding: 0 30rpx;
  margin: 15rpx 0;
  width: 750rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);
}

.reward-con {
  padding: 25rpx 0;
}

.reward-price {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(246, 51, 45, 1);
}

.reward-text {
  padding-top: 20rpx;
  color: #757575;
}

.reward-text .flex-c {
  width: 50%;
}

.reward-text .flex-c:last-child {
  text-align: end;
}

.reward-text view view {
  margin-bottom: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reward-status {
  color: #f6332d;
}
