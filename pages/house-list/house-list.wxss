/* pages/house-list/house-list.wxss */
@import "../template/house-template.wxss";

.position-top {
  z-index: 1000;
  position: fixed;
  top: 0;
  padding-bottom: 20rpx;
  background: white;
}

.top {
  height: 60rpx;
  line-height: 60rpx;
}

.city {
  margin-left: 13rpx;
  margin-right: 30rpx;
}

.add-img {
  width: 23rpx;
  height: 27rpx;
  margin-top: 16rpx;
}

.top-right {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(191, 191, 191, 0.18);
  border-radius: 30rpx;
}

.top-right input {
  height: 60rpx;
  line-height: 60rpx;
}

.seach-img {
  width: 23rpx;
  height: 23rpx;
  margin: 18rpx 11rpx 0 25rpx;
}

/* 导航 */

.nav {
  z-index: 1000;
  position: fixed;
  top: 80rpx;
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  background: rgba(245, 245, 245, 1);
}

.nav-item {
  width: 25%;
  text-align: center;
}

.nav-item.active {
  color: #e50014;
}

.nav-item.active .sanjiao {
  border-top: 8rpx solid #e50014;
}

.sanjiao {
  content: "";
  border-top: 8rpx solid #333;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  display: inline-block;
  margin: 0 0 8rpx 5rpx;
}
.srit-img{
  width: 23rpx;
  height: 25rpx;
}

/* 楼盘列表 */

.house-area {
  margin-top: 210rpx;
}

/* 区域显示 */

.position-area {
}

.position-area-con {
  z-index: 1000;
  position: fixed;
  top: 168rpx;
  height: 630rpx;
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
}

.position-area-list {
  height: 530rpx;
}
.position-area-list2{
  overflow-y:scroll; 
}

.position-area-section view view {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 30rpx;
}

.select-true-img {
  width: 27rpx;
  height: 18rpx;
  margin-top: 42rpx;
}

.hr-mag {
  margin: 1rpx 0;
}

.position-area-btn-group {
  width: 750rpx;
  height: 98rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1px 1px 0px rgba(138, 138, 137, 0.21);
}

.position-area-clear {
  width: 330rpx;
  height: 70rpx;
  margin-top: 15rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(117, 117, 117, 1);
}

.position-area-confirm {
  width: 330rpx;
  height: 70rpx;
  margin-top: 15rpx;
  line-height: 70rpx;
  text-align: center;
  background: rgba(246, 51, 45, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

/* 价格 */
.price-active{
  color: #F6332D !important;
}
.active1{
  color: #F6332D !important;
}
.price-tit {
  width: 250rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #1a1a1a;
}

.price-tit view {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
}

.position-price-list {
  width: 501rpx;
  height: 530rpx;
  background: rgba(250, 250, 250, 1);
}

.position-price-section view {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
}

.position-price-btn-group {
  position: fixed;
  top: 701rpx;
}

.position-price-btn-group input {
  width: 200rpx;
  height: 70rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  margin-top: 14rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(117, 117, 117, 1);
}

.position-price-btn-group text {
  margin: 0 20rpx;
  margin-top: 24rpx;
}

.position-price-btn-group button {
  width: 200rpx;
  height: 70rpx;
  margin-top: 14rpx;
  margin-left: 40rpx;
  line-height: 70rpx;
  text-align: center;
  background: rgba(246, 51, 45, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

/* 户型 */

.position-type-confirm {
  width: 690rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 14rpx;
  text-align: center;
  background: rgba(246, 51, 45, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.position-type-btn {
  padding-top: 2rpx;
}

/* 筛选 */

.moreState-tit {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.moreCard-section {
  height: 68rpx;
  margin-right: 15rpx;
  margin-bottom: 25rpx;
  line-height: 68rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 5rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(143, 143, 143, 1);
}
.active{
  background:#FFEFF0;color:#F6332D;
}
