/* pages/mine/my-share/my-share.wxss */

page {
  background: #f5f5f5;
}

.share-section {
  width: 690rpx;
  margin: 30rpx;
  box-sizing: border-box;
  padding: 30rpx;
  padding-right: 0;
  background: #fff;
}

.share-img {
  width: 210rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.share-right {
  margin-left: 20rpx;
}

.share-name{
  width: 260rpx;
}
.share-look {
  width: 140rpx;
  /* margin-right: -15rpx; */

  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(117, 117, 117, 1);
}
.share-look text{
  color: #FF0000;
}

.share-price {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #f00;
}

.share-price-num {
  font-size: 36rpx;
}

.share-address {
  width: 380rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(117, 117, 117, 1);
}
