
.acti-section {
  position: relative;
  width: 690rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border: 2rpx solid #f7f0f0;
  box-shadow: 4rpx 4rpx 20rpx #f5f2f2;
  border-radius: 10rpx;
  overflow: hidden;
}

.acti-section-img {
  width: 690rpx;
  height: 220rpx;
}

.acti-section-text {
  width: 450rpx;
  margin: 25rpx 0;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
}

.acti-section-time {
  width: 450rpx;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(168, 168, 168, 1);
}

.acti-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 160rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(246, 51, 45, 1);
  border-radius: 27rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  text-align: center;
}
.acti-posi-status{
  z-index: 3;
  position: absolute;
  top: 0;
  left: 0;
  width: 94rpx;
  height: 40rpx;
}