.container{
  padding-bottom: 50px;
}
.head{
  width: 100%;
  background: #573B2D;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 60rpx 0;
  border-bottom: 20rpx solid #f8f8f8;
}
.headContent{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #fff;
}
.headCon{
  position:relative;
  border:5rpx solid #fff;
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  text-align:center;
  line-height:100rpx;
  font-size:32rpx;
  margin-bottom:15rpx;
}
.canvas1{
  width: 60px;
  height: 60px;
}
.canvas2{
  width: 60px;
  height: 60px;
  position: absolute;
  top: 0rpx;
  left:0;
  z-index: 5;
}
.headInfo{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #47d2fd;
  z-index: 20;
}

.nav{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 20rpx solid #f5f5f5;
}
.nav view{
  width: calc(25% - 1px);
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
  border-right: 1px solid #e5e5e5;
  font-size:30rpx;
}
.nav view:nth-child(4n){
  border-right: 0;
}
/* .nav view:nth-child(-n+4){
  border-bottom: 1px solid #e5e5e5;
} */
.nav image{
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 20rpx;
}

.title{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
}
.title .titleMore{
  font-size: 26rpx;
  color: #888;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title view image{
  width: 15rpx;
  height: auto;
  margin-left: 10rpx;
}

/* 海报 */
.poster{
  box-sizing: border-box;
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 20rpx solid #f5f5f5;
}
.poster image{
  width: 150rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.poster image:last-child{
  margin-right: 0
}

/* 推好文 */
.readList{
  border-bottom: 20rpx solid #f5f5f5;
}
.read{
  display: flex;
  align-items: center;
  flex-direction: row;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.readImg{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.readDetail{
  flex:1;
  overflow: hidden;
  height: 140rpx;
  display: flex;
  flex-direction: column;
}
.readTitle{
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}
.readText{
  width: 100%;
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}

.readShare{
  width: 80rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-left: 30rpx;
  border-left: 1px solid #eee;
}
.readShare image{
  width: 40rpx;
  height: 40rpx;
}


/* 近期客户 */
.customersList{
  box-sizing: border-box;
  padding: 20rpx;
}
.customers{
  display: flex;
  flex-direction: row;
  position: relative;
}
.customersTime{
  width: 140rpx;
  line-height: 120rpx;
  font-size: 26rpx;
}
.customersDots{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #272B56;
  position: absolute;
  left: 128rpx;
  top: 46rpx;
}
.customersDetail{
  width: calc(100% - 140rpx);
  box-sizing: border-box;
  padding-left: 10rpx;
  border-left: 1px solid #272B56;
}
.customersContent{
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}
.customersImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}
.customersCon{
  width: calc(100% - 180rpx);
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.customersName{
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.customersInfo{
  width: 100%;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chatsImg{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
 
.poster-wrap{
  display: none;
}

