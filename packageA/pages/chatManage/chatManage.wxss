page{
  background: #f5f5f5;
}
.newsContainer{
  height: calc(100vh - 180rpx);
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx; 
}
.scrollTop{
  height: calc(100vh - 180rpx - 200px);
}
.date{ 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.date text{
  line-height: 40rpx;
  padding: 0 30rpx;
  background: #ddd;
  font-size: 24rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
}
.time{
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.news{
  margin-bottom: 50rpx;
}
.news::after{
  content:"";
  display:block;
  visibility:hidden;
  height:0;
  clear:both;
}
.right>image{
  float: right;
  margin-left: 20rpx;
}
.right>view{
  float: right;
}
.left>image{
  float: left;
  margin-right: 20rpx;
}
.left>view{
  float: left;
}

.userImg{
  width: 80rpx;
  height: 80rpx;
}
.content{
  max-width: calc(100% - 200rpx);
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.text{
  line-height: 1.7;
}

.contentBtn{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 30rpx;
  margin-top: 16rpx;
  border: 1px solid #eee;
}
.contentBtn image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.content1{
  display: flex;
  flex-direction: row;
}
.productImg{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
