  width: calc(100% - 100rpx);
} */

.content2{
  color: #fff;
  background: #1AAD19;
  padding: 10rpx 20rpx;
}

.foot{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.foot input{
  width: calc(100% - 140rpx);
  height: 80rpx;
  background: #f5f5f5;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.foot .sendBtn{
  width: 120rpx;
  background: #1AAD19;
  color: #fff;
  line-height: 80rpx;
  margin-left:15rpx;
}

.emoji-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 200px;
  padding: 5px 0;
  box-sizing: border-box;
  display: none;
}
.emoji-box.emojiShow{
  display: block;
}

.emoji-cell {
  width: 9.09%;
  height: 33px;
  display: inline-block;
}

.emoji-cell image {
  width: 23px;
  height: 23px;
  padding: 5px;
  border-radius: 3px;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@-webkit-keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}

@keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}

