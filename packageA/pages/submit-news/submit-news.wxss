/* packageA/pages/submit-news/submit-news.wxss */

.textarea {
  width: 100%;
  height: 200rpx;
  /* border: 1rpx solid #bfbfbf; */
  margin: 40rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.upload-box{
  width: 180rpx;
  height: 180rpx;
  border: 1rpx solid #bfbfbf;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #bfbfbf;
  border-radius: 10rpx;
}

.photo-area{
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.add-img{
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx 0;
}
.photo-box{
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;

}
.photo-close{
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 35rpx;
  height: 35rpx;
}
.photo-img{
  width: 100%;
  height: 100%;
}
.btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4e76a9;
  color: white;
  border-radius: 10rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
}
.btn2{
  background: white;
  color: #999999;
  border: 1px solid #999999;
}