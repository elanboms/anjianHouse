.nav{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #dedede;
}
.nav view{
  height: 96rpx;
  line-height: 100rpx;
  border-bottom: 4rpx solid transparent;
}
.nav view.active{
  color: #272B56;
  border-bottom: 4rpx solid #272B56;
}
.head{
  width: 690rpx;
  margin: 0 auto;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.headTitle{
  font-size: 30rpx;
}
.headTips{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.headTips view{
  padding: 6rpx 20rpx;
  font-size: 24rpx;
  color: #333;
  border: 1px solid transparent;
}
.headTips view.active{
  color: #fff;
  border: 1px solid #272B56;
  background: #272B56;
  border-radius: 50rpx;
}

.headList{
  width: 690rpx;
  margin: 0 auto 20rpx;
  background: #f8f8f8;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.headList>view{
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  color: #272B56;
  font-size: 34rpx;
}
.headList view text{
  color: #999;
  font-size: 26rpx;
}

ec-canvas{
  display: block;
  width: 100%;
  height: 600rpx;
}

.list{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #dedede;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.listDetail{
  width: calc(100% - 120rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.listIndex{
  width: 100rpx;
  text-align: right;
}
.listImg{
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.listName{
  width: calc(100% - 220rpx);
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.listNum{
  color: #272B56;
  font-size: 32rpx;
  width: 120rpx;
  text-align: right;
}
.list:first-child .listIndex{
  font-size: 46rpx;
}
.list:first-child .listImg{
  width: 100rpx;
  height: 100rpx;
}
.list:first-child .listName{
  width: calc(100% - 260rpx);
}
.list:first-child .listNum{
  font-size: 46rpx;
}