page{
  background: #f5f5f5;
}
form{
  display: block;
  width: 100%;
}
.section{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #dedede;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
}
.userImg{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 5rpx;
  margin: 20rpx auto;
}
.title{
  width: 160rpx;
}
.section input{
  min-width: calc(100% - 160rpx);
}
.section .nav{
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.section .nav view{
  height: 54rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  padding: 0rpx 24rpx;
  border: 1px solid #272B56;
  color: #272B56;
  border-radius: 5rpx;
}
.section .nav view.active{
  background: #272B56;
  color: #fff;
}
.section picker{
  width: calc(100% - 160rpx);
}
.section picker input{
  min-width: 100%;
}

.titleCon{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #272B56;
  background: #f8f8f8;
}
.titleCon image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.titleCon .toTop{
  transform: rotate(-180deg);
}

.submit{
  display: block;
  width: 710rpx;
  line-height: 100rpx;
  background: #272B56;
  color: #fff;
  font-size: 32rpx;
  margin: 40rpx auto;
}
.icon-xiangxiajiantou{
  font-size: 23rpx;
  color: #272B56;
  margin-left: 5rpx;
  font-weight: 700;
  vertical-align: middle;
  margin-top: 5rpx;
}