.customers{
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1px solid #dedede;
}
.customersDetail{
  width: calc(100% - 90rpx);
  display: flex;
  flex-direction: row;
}
.customersImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
}
.customersInfo{
  width: calc(100% - 110rpx);
}
.customersName{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersCon{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersSou{
  width: 100%;
  font-size: 26rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersTips{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
}
.customersTips text{
  color: #272B56;
  padding: 0 10rpx;
  border: 1px solid #272B56;
  border-radius: 5rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.customersChats{
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
}
.icon-xiaoxi1{font-size: 40rpx;color: #222;}