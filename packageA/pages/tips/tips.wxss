page{
  background: #f5f5f5;
}

.tipsContent{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 28rpx;
}
.tipsContent text{
  color: #272B56;
  padding: 6rpx 20rpx;
  border: 1px solid #272B56;
  border-radius: 5rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.title{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #dedede;
}
.title text{
  color: #272B56;
  padding: 6rpx 20rpx;
  border: 1px solid #272B56;
  border-radius: 5rpx;
}
.title view{
  color: #666;
}

.customers{
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1px solid #dedede;
}
.customersDetail{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.customersImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
}
.customersInfo{
  width: calc(100% - 110rpx);
}
.customersName{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersCon{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersSou{
  width: 100%;
  font-size: 26rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.customersTips{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
}
.customersTips text{
  color: #272B56;
  padding: 0 10rpx;
  border: 1px solid #272B56;
  border-radius: 5rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
